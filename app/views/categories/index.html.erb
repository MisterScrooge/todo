<div class="container categories-wrapper">
  <div class="container-md categories-header">
    <h1>Categories</h1>
    <span>User Id<span>
    <i class="fa-solid fa-plus"></i>
    <i class="fa-solid fa-house"></i>
    <button class="nav-item">
      <%= link_to '📝', new_category_path, class: "nav-link" %>
    </button>
  </div>

  <% @categories.each do |category| %>
    <div class="container-md category-container">
      <div class="container-sm category-header">
        <h3><%= link_to category.cat_name, category %></h3>
        <h3><%= category.user_id %></h3>
        <button><%= link_to '🗑️', category, method: :delete, data: { confirm: 'You sure?' } %></button>
      </div>
      <ul>
        <li>Checklist of tasks</li>
        <li>Task 1</li>
        <li>Task 2</li>
        <li>Task 3</li>
      </ul>
    </div>
  <% end %>
</div>






<%# scaffold default %>

<% if false %>

<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Category name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.cat_name %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>

<% end %>