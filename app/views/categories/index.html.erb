<div class="container categories-wrapper">
  <div class="container-md categories-header">
    <h1>Categories</h1>
    <span>User Id<span>
    <i class="fa-solid fa-plus"></i>
    <i class="fa-solid fa-house"></i>
    <button class="nav-item">
      <%= link_to '📝', new_category_path, class: "nav-link" %>
    </button>
  </div>

  <% @categories.each do |category| %>
    <div class="container-md category-container">
      <div class="container-sm category-header">
        <h3><%= link_to category.cat_name, category %></h3>
        <button><%= link_to '🗑️', category, method: :delete, data: { confirm: 'You sure?' } %></button>
      </div>
      <ul class="category-details">
        <li>Tasks: <%= category.tasks.length %></li>
        <li>Status:
          <% if category.tasks.detect { |task| task.due_date < Date.current } %>
            <span>🔥 Uh-oh</span>
          <% else %>
            <span>🟢 All Good</span>
          <% end %>
        </li>
      </ul>
    </div>
  <% end %>
</div>






