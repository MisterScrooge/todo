<% if false %>
  <p id="notice"><%= notice %></p>
<% end %>

<h1>
  <%= @category.cat_name %>
</h1>

<h3>Tasks</h3>
<h4>Due Today: </h4>
<%= render @category.tasks %>
<h4>Due Someday: </h4>
<% @category.tasks.each do |task| %>
  <% if task.due_date != Date.current %>
      <div class="someday">
          <div>
              <p>
                  <strong>Task: </strong>
                  <%= task.task %>
              </p>
              <p><%= link_to 'Delete Task', [task.category, task], method: :delete, data: { confirm: 'Delete task?' } %></p>
          </div>
          <p>
              <strong>Comment: </strong>
              <%= task.comment %>
          </p>
          <p>
              <strong>Due date: </strong>
              <%= task.due_date %>
          </p>
          <%= link_to 'Edit task', edit_category_task_path(@category, task) %>
      </div>
  <% end %>
<% end %>

<h4>Add task: </h4>
<%= render 'tasks/form' %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
